use flake '.?submodules=1'
eval "$shellHook"

set -aeu
set -o pipefail

has_util() {
    command -v "$1" > /dev/null 2>&1
}

compute_file_hash() {
    if has_util md5;
    then
        md5 -q
    else
        md5sum
    fi
}

# SETUP RUST ENVIRONMENT

CARGO_HOME="${PWD}/.direnv/cargo"
PATH="${CARGO_HOME}/bin:${PATH}"
mkdir -p "${CARGO_HOME}"

unset PS1

